<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/general_padding">

    <EditText
        android:id="@+id/edit_text_pm_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name for the payment method..."
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="@dimen/spinner_min_height" />

    <Button
        android:id="@+id/btn_pm_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_pm_name"
        android:layout_marginTop="@dimen/general_padding"
        android:text="Insert payment method" />
</RelativeLayout>