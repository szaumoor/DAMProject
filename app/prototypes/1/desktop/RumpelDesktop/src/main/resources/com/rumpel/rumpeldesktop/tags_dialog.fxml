<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.paint.Color?>

<BorderPane prefHeight="279.0" prefWidth="514.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rumpel.rumpeldesktop.mvc.controllers.TagsDialogController">
   <center>
      <BorderPane prefHeight="248.0" prefWidth="384.0">
         <center>
            <AnchorPane prefHeight="190.0" prefWidth="474.0" BorderPane.alignment="CENTER">
               <TextField fx:id="newTagField" layoutX="156.0" layoutY="84.0" prefHeight="36.0" prefWidth="318.0" promptText="%new_tag" />
               <Label layoutX="14.0" layoutY="88.0" prefHeight="19.0" prefWidth="101.0" text="%new_tag" />
               <Button fx:id="insertBtn" onAction="#insertTag" layoutX="155.0" layoutY="137.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="93.0" text="%insert">
                  <styleClass>
                     <String fx:value="btn" />
                     <String fx:value="btn-primary" />
                  </styleClass>
                  <effect>
                     <DropShadow spread="0.1">
                        <color>
                           <Color opacity="0.5" />
                        </color>
                     </DropShadow>
                  </effect>
               </Button>
               <ComboBox fx:id="tagComboBox" layoutX="155.0" layoutY="44.0" prefHeight="27.0" prefWidth="319.0" />
               <Label layoutX="14.0" layoutY="44.0" prefHeight="28.0" prefWidth="118.0" text="%tags" textAlignment="CENTER" />
               <Button fx:id="editBtn" layoutX="381.0" layoutY="137.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="93.0" text="%edit">
                  <styleClass>
                     <String fx:value="btn" />
                     <String fx:value="btn-primary" />
                  </styleClass>
                  <effect>
                     <DropShadow spread="0.1">
                        <color>
                           <Color opacity="0.5" />
                        </color>
                     </DropShadow>
                  </effect>
            </Button>
            </AnchorPane>
         </center>
      </BorderPane>
   </center>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</BorderPane>
