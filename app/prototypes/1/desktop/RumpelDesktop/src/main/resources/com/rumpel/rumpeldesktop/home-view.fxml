               </top>
               <center>
                  <TableView fx:id="tableView" focusTraversable="false" BorderPane.alignment="CENTER">
                    <columns>
                      <TableColumn maxWidth="1.7976931348623157E308" minWidth="50.0" prefWidth="-1.0" text="%time" />
                        <TableColumn maxWidth="1.7976931348623157E308" minWidth="50.0" prefWidth="-1.0" text="%payment_method" />
                      <TableColumn maxWidth="1.7976931348623157E308" minWidth="50.0" prefWidth="-1.0" text="%elements" />
                        <TableColumn maxWidth="1.7976931348623157E308" minWidth="50.0" prefWidth="-1.0" text="%total" />
                    </columns>
