                    </Menu>
                    <Menu mnemonicParsing="false" text="%help">
                        <MenuItem mnemonicParsing="false" onAction="#openAboutDialog" text="%about_rumpel" />
                    </Menu>
                </MenuBar>
            </top>
            <styleClass>
                <String fx:value="panel" />
                <String fx:value="panel-info" />
            </styleClass>
        </BorderPane>
    </top>
