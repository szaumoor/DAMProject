                <styleClass>
                    <String fx:value="btn" />
                    <String fx:value="btn-primary" />
                    <String fx:value="btn-lg" />
                </styleClass>
                <effect>
                    <DropShadow spread="0.1">
                        <color>
                            <Color opacity="0.5" />
