<BorderPane fx:id="mainPane" prefHeight="418.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rumpel.rumpeldesktop.mvc.controllers.HomeController">
    <center>
        <BorderPane>
            <center>
            <BorderPane>
               <top>
                   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                       <Label alignment="CENTER" prefHeight="19.0" prefWidth="231.0" text="CALCULATED TODAL TODAY" textAlignment="CENTER" />
