                    </DropShadow>
                </effect>
                <cursor>
                    <Cursor fx:constant="OPEN_HAND" />
                </cursor>
            </Button>
            <Separator opacity="0.0" prefHeight="11.0" prefWidth="90.0" />
            <Separator prefWidth="200.0" />
        </VBox>
    </left>
</BorderPane>
