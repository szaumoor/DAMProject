                     <String fx:value="btn" />
                     <String fx:value="btn-primary" />
                  </styleClass>
                  <effect>
                     <DropShadow spread="0.1">
                        <color>
                           <Color opacity="0.5" />
                        </color>
                     </DropShadow>
                  </effect>
               </Button>
               <Button layoutX="328.0" layoutY="190.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="147.0" text="%delete_account">
                  <styleClass>
                     <String fx:value="btn" />
                     <String fx:value="btn-primary" />
                  </styleClass>
                  <effect>
                     <DropShadow spread="0.1">
                        <color>
                           <Color opacity="0.5" />
                        </color>
                     </DropShadow>
                  </effect>
               </Button>
               <Label layoutX="14.0" layoutY="14.0" prefHeight="36.0" prefWidth="118.0" text="%current_pass" textAlignment="CENTER">
