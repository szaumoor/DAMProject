<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<DialogPane prefHeight="678.0" prefWidth="515.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.rumpel.rumpeldesktop.mvc.controllers.BudgetDialogController">
    <content>
        <BorderPane prefHeight="633.0" prefWidth="515.0" styleClass="panel">
            <center>
                <BorderPane prefHeight="248.0" prefWidth="384.0">
                    <center>
                        <AnchorPane prefHeight="701.0" prefWidth="475.0" BorderPane.alignment="CENTER">
                            <ComboBox fx:id="budgetsComboBox" layoutX="149.0" layoutY="37.0" prefHeight="36.0"
                                      prefWidth="319.0" promptText="%none_selected"/>
                            <DatePicker fx:id="startDatePicker" editable="false" layoutX="148.0" layoutY="119.0"
                                        prefHeight="36.0" prefWidth="319.0"/>
                            <DatePicker fx:id="endDatePicker" editable="false" layoutX="149.0" layoutY="177.0"
                                        prefHeight="36.0" prefWidth="319.0"/>
                            <ComboBox fx:id="currComboBox" layoutX="149.0" layoutY="227.0" prefHeight="36.0"
                                      prefWidth="319.0" promptText="%none_selected"/>
                            <Spinner fx:id="spinnerSoft"  disable="true" editable="true" layoutX="150.0" layoutY="274.0"
                                     prefHeight="36.0" prefWidth="319.0"/>
                            <Spinner fx:id="spinnerHard" editable="true" layoutX="150.0" layoutY="327.0"
                                     prefHeight="36.0" prefWidth="319.0"/>
                            <ComboBox fx:id="pmComboBox" disable="true" layoutX="150.0" layoutY="386.0"
                                      prefHeight="36.0" prefWidth="319.0" promptText="%none_selected"/>
                            <CheckBox fx:id="checkSoftLimit" layoutX="9.0" layoutY="472.0" mnemonicParsing="false"
                                      text="%soft_limit">
                                <font>
                                    <Font size="14.0"/>
                                </font>
                            </CheckBox>
                            <CheckBox fx:id="checkPm" layoutX="9.0" layoutY="508.0" mnemonicParsing="false"
                                      text="%payment_method">
                                <font>
                                    <Font size="14.0"/>
                                </font>
                            </CheckBox>
                            <Button layoutX="150.0" layoutY="472.0" mnemonicParsing="false" onAction="#insertBudget"
                                    prefHeight="27.0" prefWidth="93.0" text="%insert">
                                <styleClass>
                                    <String fx:value="btn"/>
                                    <String fx:value="btn-primary"/>
                                </styleClass>
                                <effect>
                                    <DropShadow spread="0.1">
                                        <color>
                                            <Color opacity="0.5"/>
                                        </color>
                                    </DropShadow>
                                </effect>
                            </Button>
                            <Button layoutX="375.0" layoutY="472.0" mnemonicParsing="false" onAction="#modifyBudget"
                                    prefHeight="27.0" prefWidth="93.0" text="%edit">
                                <styleClass>
                                    <String fx:value="btn"/>
                                    <String fx:value="btn-primary"/>
                                </styleClass>
                                <effect>
                                    <DropShadow spread="0.1">
                                        <color>
                                            <Color opacity="0.5"/>
                                        </color>
                                    </DropShadow>
                                </effect>
                            </Button>
                            <Button layoutX="375.0" layoutY="514.0" mnemonicParsing="false" onAction="#deleteBudget"
                                    prefHeight="27.0" prefWidth="93.0" text="%delete">
                                <styleClass>
                                    <String fx:value="btn"/>
                                    <String fx:value="btn-primary"/>
                                </styleClass>
                                <effect>
                                    <DropShadow spread="0.1">
                                        <color>
                                            <Color opacity="0.5"/>
                                        </color>
                                    </DropShadow>
                                </effect>
                            </Button>
                            <Label fx:id="lblPm" disable="true" layoutX="9.0" layoutY="386.0" prefHeight="36.0"
                                   prefWidth="118.0" text="%payment_method" textAlignment="CENTER">
                                <font>
                                    <Font size="14.0"/>
                                </font>
                            </Label>
                            <Label layoutX="11.0" layoutY="119.0" prefHeight="36.0" prefWidth="118.0" text="%start_date"
                                   textAlignment="CENTER">
                                <font>
                                    <Font size="14.0"/>
                                </font>
                            </Label>
                            <Label layoutX="8.0" layoutY="177.0" prefHeight="36.0" prefWidth="118.0" text="%end_date"
                                   textAlignment="CENTER">
                                <font>
                                    <Font size="14.0"/>
                                </font>
                            </Label>
                            <Label fx:id="lblSoftLimit" disable="true" layoutX="9.0" layoutY="274.0" prefHeight="36.0"
                                   prefWidth="118.0" text="%soft_limit" textAlignment="CENTER">
                                <font>
                                    <Font size="14.0"/>
                                </font>
                            </Label>
                            <Label layoutX="9.0" layoutY="327.0" prefHeight="36.0" prefWidth="118.0" text="%hard_limit"
                                   textAlignment="CENTER">
                                <font>
                                    <Font size="14.0"/>
                                </font>
                            </Label>
                            <Label layoutX="8.0" layoutY="37.0" prefHeight="36.0" prefWidth="118.0" text="%budgets"
                                   textAlignment="CENTER"/>
                            <Separator layoutX="2.0" layoutY="89.0" prefHeight="4.0" prefWidth="473.0"/>
                            <Label layoutX="8.0" layoutY="227.0" prefHeight="36.0" prefWidth="118.0" text="%currency"
                                   textAlignment="CENTER">
                                <font>
                                    <Font size="14.0"/>
                                </font>
                            </Label>
                            <Separator layoutX="7.0" layoutY="450.0" prefHeight="4.0" prefWidth="473.0"/>
                        </AnchorPane>
                    </center>
                </BorderPane>
            </center>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </BorderPane>
    </content>
    <styleClass>
        <String fx:value="panel"/>
        <String fx:value="panel-info"/>
    </styleClass>
</DialogPane>
